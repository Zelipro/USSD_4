#: import SwapTransition kivy.uix.screenmanager.SwapTransition
#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import NoTransition kivy.uix.screenmanager.NoTransition
#: import WipeTransition kivy.uix.screenmanager.WipeTransition
#: import FallOutTransition kivy.uix.screenmanager.FallOutTransition
#: import RiseInTransition kivy.uix.screenmanager.RiseInTransition
MDScreen:

    MDNavigationLayout:

    ScreenManager:
        id:cr
        transition:NoTransition()
        Screen:
            name: "Page0"
            FitImage:
                source:"Font.jpeg"
                size_hint:1,1
            Image:
                source:"Logo.png"
                size_hint:.35,.35
                pos_hint:{"center_x":0.5,"center_y":0.7}
            MDLabel:
                text: "ALL USSD"
                bold:True
                font_style:"H4"
                halign:"center"
                pos_hint:{"center_y":.5}
                theme_text_color:"Custom"
                text_color:[1,1,1,1]
            MDSpinner:
                size_hint:None,None
                size:30,30
                active:True
                pos_hint:{"center_x":0.5,"center_y":0.4}

        Screen:
            name: "Page1"
            BoxLayout:
                orientation: 'vertical'
                MDTopAppBar:
                    id:Pge_Flags
                    title:"Pays/Country"
                    left_action_items: [["menu",lambda x : Nav.set_state("toggle")]]
                    right_action_items: [["view-list",lambda x: app.Changer_forme(x)],["weather-night-partly-cloudy",lambda x : app.Changer(x)]]
                    anchor_title:"left"
                    elevation:1
                MDScreen:
                    ScrollView:
                        id:flags
                            
        
        Screen:
            name: "Page2"
            BoxLayout:
                orientation: 'vertical'
                MDTopAppBar:
                    id:Page2_Top
                    left_action_items: [["menu",lambda x : Nav.set_state("toggle")]]
                    right_action_items: [["weather-night-partly-cloudy",lambda x : app.Changer(x)]]
                    anchor_title:"left"
                    elevation:1
                BoxLayout:
                    padding:10
                    orientation: 'vertical'
                    MDRectangleFlatButton:
                        text:"[b]Back[/b]"
                        pos_hint:{"center_x":.1,"center_y":.95}
                        on_release:app.Back_with_instance(self)
                    ScrollView:
                        id:List2
        Screen:
            name: "Page3"
            BoxLayout:
                orientation: 'vertical'
                MDTopAppBar:
                    id:Page3_Top
                    left_action_items: [["menu",lambda x : Nav.set_state("toggle")]]
                    right_action_items: [["weather-night-partly-cloudy",lambda x : app.Changer(x)]]
                    anchor_title:"left"
                    elevation:1
                BoxLayout:
                    padding:10
                    orientation: 'vertical'
                    MDRectangleFlatButton:
                        text:"[b]Back[/b]"
                        pos_hint:{"center_x":.1,"center_y":.95}
                        on_release:app.Back_with_instance(self)
                    ScrollView:
                        do_scroll_x:False
                        do_scroll_y:True
                        MDBoxLayout:
                            id:List3
                            orientation:"vertical"
                            spacing:70
                            padding:40
                            adaptive_height:True


    # Navigation Drawer Panel
    MDNavigationDrawer:
        id:Nav
        radius:(0,16,16,0)
        MDBoxLayout:
            orientation:"vertical"
            spacing:20
            padding:5
            MDCard:
                radius:[15]
                elevation:3
                size_hint_y:0.5
                pos_hint:{"center_x":0.3}
                md_bg_color: app.theme_cls.primary_color
                MDBoxLayout:
                    orientation:"vertical"
                    Image:
                        source:"Logo.png"
                        size_hint_y:1.5
                        pos_hint:{"center_x":.65}
                        #size_hint:
                    MDLabel:
                        text:"[b][color=000000]CodeSaver[/color][/b]"
                        font_style:"H5"
                        markup:True
                        pos_hint:{"center_y":.5,"center_x":.93}
            ScrollView:
                MDList:
                    TwoLineIconListItem:
                        text:"[b]Changer de font[/b]"
                        secondary_text:"Rouge , vert ,....."
                        on_release:app.appui3(self)
                        IconLeftWidget:
                            icon:"font-awesome"
                    TwoLineIconListItem:
                        text:"[b]A propos de nous[/b]"
                        secondary_text:"Toute les infos sur nous"
                        on_release:app.appui3(self)
                        IconLeftWidget:
                            icon:"information"
                    TwoLineIconListItem:
                        text:"[b]Quitter[/b]"
                        theme_text_color:"Custom"
                        text_color:[1,0,0,1]
                        secondary_text:"Partir de l'application"
                        on_release:app.appui3(self)
                        IconLeftWidget:
                            icon:"close"
        # Add Navigation Drawer Panel Content here.
        